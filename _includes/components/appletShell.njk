{% macro applet(title, maxWidth, height, data) %}
    <div
        id="{{title}}Applet"
        data-applet="{{title}}"
        data-js="applet"
        @click="setActiveApplet('{{title}}')"
        class="{{maxWidth}} {{height}} h-full flex-1 w-full flex flex-col px-2 pt-2 pb-3 gap-3 rounded-lg bg-ui-applet-bg overflow-hidden xs:flex relative"
        :class="activeApplet === '{{title}}' ? 'shadow-applet-active' :'shadow-applet-idle hidden'">
        <header class="flex justify-center w-full px-2 py-1.5 rounded bg-clr-tint">
            <h2 class="text-sm font-medium text-display-secondary">{{title | capitalize}}</h2>
        </header>
        <section class="flex flex-col flex-1 px-1 py-px overflow-hidden">
            {% block content %}{% endblock %}
        </section>
    </div>
{% endmacro %}
