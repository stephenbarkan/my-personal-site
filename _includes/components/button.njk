{% macro button(label, icon, highlighted, as, href, class, onClick) %}
    <{{as}}
        {% if href %}{{href}}{% endif %}
        {% if onClick %}@click="{{onClick}}"{% endif %}
        class="pt-1.5 px-2 pb-[7px] flex gap-1 justify-center items-center rounded-sm {{class}}
        {% if highlighted %} bg-clr-solid shadow-btn-highlight text-button-inverse {% else %}bg-btn-bg text-display-secondary hover:text-display-primary hover:bg-btn-bg-hover shadow-btn-basic text-button active:shadow-btn-inset-basic{% endif %}"
    >
        <span class="block mb-px -mt-px text-display-tertiary h-15 w-15">{{icon | safe}}</span>
        <span>{{label | safe}}</span>
    </{{as}}>
{% endmacro %}
