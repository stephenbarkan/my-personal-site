{% set heartIcon %}{% include "icons/heart-fill.svg" %}{% endset %}
{% set editIcon %}{% include "icons/edit-fill.svg" %}{% endset %}
{% set chatIcon %}{% include "icons/chat-fill.svg" %}{% endset %}
{% set musicIcon %}{% include "icons/music-fill.svg" %}{% endset %}
{% set groupIcon %}{% include "icons/group-fill.svg" %}{% endset %}

{% macro appletIcon(icon, applet) %}
    <div class="flex flex-col items-center gap-1">
        <button @click="setActiveApplet('{{applet}}')" style="transform-origin: center 80%;" data-applet="{{applet}}" class="grid w-12 h-12 transition duration-300 transform rounded-lg active:scale-90 shadow-app-icon place-content-center text-clr-solid bg-clr-tint">
            <div class="w-6 h-6 filter drop-shadow-app-icon">{{icon | safe}}</div>
        </button>
        <span
            x-show="activeApplet === '{{applet}}'"
            x-transition:enter="delay-75 duration-200"
            x-transition:enter-start="scale-0 opacity-0"
            x-transition:enter-end="scale-100 opacity-100"
            x-transition:leave=""
            x-transition:leave-start="scale-100 opacity-100"
            x-transition:leave-end="scale-0 opacity-0"
            class="block w-1 h-1 transition rounded-full bg-clr-solid">
        </span>
    </div>
{% endmacro %}
        <footer class="flex justify-center w-full pb-2">
            <nav class="flex px-3 pb-1 pt-3 rounded-[15px] gap-3 bg-ui-topbar-bg backdrop-blur shadow-applet-idle min-w-[200px]">
                {{ appletIcon(applet="photos", icon=heartIcon) }}
                {{ appletIcon(applet="design", icon=groupIcon) }}
                {{ appletIcon(applet="posts", icon=editIcon) }}
                {{ appletIcon(applet="music", icon=musicIcon) }}
                {{ appletIcon(applet="chat", icon=chatIcon) }}
            </nav>

        </footer>
