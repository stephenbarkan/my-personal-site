{% extends "components/window.njk" %}
{% import "components/portfolio-folder.njk" as link %}

{% block content %}

    <div class="h-full overflow-y-auto">
        <div class="flex h-full pr-8" x-data="{open: false, activeCategory: ''}">
            <ul class="flex flex-col flex-grow-0 flex-shrink-0 h-full overflow-y-auto border-r border-grey-200 bg-grey-100 focus-within:z-10 min-w-64">
                    {{link.portfolioFolder(key="doist", title="Doist", date="2020 – current", folder=true)}}
                    {{link.portfolioFolder(key="ink", title="INK Communications", date="2018 – 2019", folder=true)}}
                    {{link.portfolioFolder(key="fun", title="for fun", folder=true)}}
                    {{link.portfolioFolder(key="freelance", title="freelance projects", folder=true)}}
                    <div @click="open=false" class="flex-1"></div>
            </ul>
            <ul x-show="open === true" class="flex-grow-0 flex-shrink-0 h-full overflow-y-auto border-r border-grey-200 bg-grey-100 focus-within:z-10 min-w-64">
                {% for post in collections.portfolio %}
                    {{link.portfolioFolder(title=post.data.title, link=post.data.link, category=post.data.tags[1])}}
                {% endfor %}
            </ul>
            {# <div class="flex-grow-0 flex-shrink-0 h-full w-72"> #}
            </div>
        </div>
    </div>
{% endblock %}
