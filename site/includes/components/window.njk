{% macro windowFrame(title, color, inverted, data) %}

<div class="relative overflow-hidden flex flex-col rounded shadow-lg pointer-events-auto window-wrapper sm:absolute draggable
{% if title != "sd" %}
closed
{% endif %}
" id="{{title}}Window">
    <div class="draggable-handle">
        <div class="h-2 bg-{{color}}-500
            {% if inverted %}
                bg-{{color}}-700
            {% endif %}">
        </div>
        <div class="relative flex justify-center px-4 py-5 xs:py-3
            {% if inverted %}
                bg-{{color}}-800
            {% else %}
                bg-{{color}}-100
            {% endif %}">
            <div class="absolute inset-y-0 left-0 flex items-center mx-4">
                <button
                        class="relative flex p-1 -m-1 transition-colors rounded-sm duration-250 window-close ease-smooth">
                    <span class="sr-only">Close Window</span>
                    <div class="w-4 h-4 bg-red-500 border rounded-full
                        {% if inverted %}
                            border-{{color}}-800
                        {% else %}
                             border-{{color}}-100
                        {% endif %}
                    ">
                    </div>
                    <div class="w-4 h-4 ml-2 bg-yellow-500 border border-{{color}}-100 rounded-full
                        {% if inverted %}
                            border-{{color}}-800
                        {% else %}
                             border-{{color}}-100
                        {% endif %}
                    ">
                    </div>
                    <div class="w-4 h-4 ml-2 bg-green-500 border border-{{color}}-100 rounded-full
                        {% if inverted %}
                            border-{{color}}-800
                        {% else %}
                             border-{{color}}-100
                        {% endif %}
                    ">
                    </div>
                </button>
            </div>
            <h2 class="text-xl leading-none serif hidden xs:block
            {% if inverted %}
                text-grey-100
            {% endif %}
            ">{{ title | capitalize }}</h2>
        </div>
    </div>
    <div class="flex flex-1 flex-col overflow-hidden window-bg
        {% if inverted %}
            inverted
        {% endif %}">
        {% block content %}
        {# window content goes here #}
        {% endblock %}
    </div>
    <div class="absolute inset-0 rounded pointer-events-none border-shadow"></div>

</div>

{% endmacro %}