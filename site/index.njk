---
layout: default
meta_title: Home
meta_description: The Personal Site of Stephen barkan
body_class: home
title: Home
---
{% set ig_images = ig_images %}
{% set projects = collections.portfolio %}
{% set journals = collections.journal %}
{% set songs = playlist %}

{% import "windows/window-me.njk" as me %}
{% import "windows/window-music.njk" as music %}
{% import "windows/window-journal.njk" as journal %}
{% import "windows/window-portfolio.njk" as portfolio with context %}
{% import "windows/window-contact.njk" as contact %}

<main id="main" class="relative flex flex-col items-center justify-between w-full min-h-full sm:justify-center">
    <div class="flex flex-col px-5 py-16 my-auto font-serif leading-none max-w-headline sm:px-12 text-headline sm:m-0">
        <h1>
            Welcome to
            <span class="whitespace-no-wrap">
                <a id="me" href="#" data-micromodal-trigger="meWindow"
                   class="relative text-red-500 rounded-lg group hocus:underline focus:shadow-none">
                   Stephen's</a> website!</span>
        </span>
    </h1>

    <nav class="mt-12">
            See <a id="portfolio" href="#" data-micromodal-trigger="porftolioWindow"
               class="relative text-purple-500 rounded-lg group hocus:underline focus:shadow-none">his design portfolio</a>, read
            <a id="journal" href="#" data-micromodal-trigger="journalWindow"
               class="relative inline-block text-yellow-500 rounded-lg group hocus:underline focus:shadow-none">about him</a>, listen to
            <a id="music" href="#" data-micromodal-trigger="musicWindow"
               class="relative text-green-500 rounded-lg group hocus:underline focus:shadow-none">music he wrote</a>, or send him
            <a id="contact" href="#" data-micromodal-trigger="contactWindow"
               class="relative text-blue-500 rounded-lg group hocus:underline focus:shadow-none">a text</a>.
        </nav>
</div>

{# window wrapper #}
<div class="fixed z-10 items-center justify-center p-1 pointer-events-none windows-container">

    {{ me.windowFrame( 'me', 'red', false, ig_images) }}
    {{ music.windowFrame( 'music', 'green', false, songs) }}
    {{ journal.windowFrame( 'journal', 'yellow', false, journals) }}
    {{ contact.windowFrame( 'contact', 'blue', false) }}
    {{ portfolio.windowFrame( 'portfolio', 'purple', false) }}
</div>

{% include "components/lightbox.njk" %}
{# {% include "components/project-previews.njk" %} #}
{% include "components/footer.njk" %}

{% include "components/close-all-button.njk" %}

<div class="fixed inset-0 fade-overlay bg-neutral ease-smooth"></div>

<div
         class="fixed inset-0 items-center justify-center p-4 font-serif text-5xl leading-snug text-center text-white bg-black border-8 md:text-6xl border-neutral rotate-pls">
        Please rotate your phone!
    </div>

</main>
