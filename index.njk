{% extends "layouts/default.njk" %}
{% import "applets/postsApplet.njk" as "postsApplet" %}
{% import "applets/photosApplet.njk" as "photosApplet" %}
{% block title %}Stephen Barkan{% endblock %}


{% block content %}
  <main class="grid w-full h-screen grid-rows-site">
    <div class="hidden sm:block">{% include "components/topbar.njk" %}</div>
      <div class="flex items-center justify-center flex-1 w-full row-start-2 gap-3 py-2 overflow-auto page-container">
        {{postsApplet.applet(title='posts', maxWidth='max-w-[740px]', height='xs:h-[460px]', data=collections.posts)}}
        {{photosApplet.applet(title='photos', maxWidth='max-w-[335px]', height='xs:h-[495px]', data=photos)}}
      </div>
    <div class="row-start-3 p-2 pt-0 page-container xs:hidden">{% include "components/bottombar.njk" %}</div>
  </main>
{% endblock %}
