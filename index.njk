{% extends "layouts/default.njk" %}
{% import "applets/photosApplet.njk" as "photosApplet" with context %}
{% import "applets/designApplet.njk" as "designApplet" with context %}
{% import "applets/postsApplet.njk" as "postsApplet" with context %}
{% block title %}Stephen Barkan{% endblock %}


{% block content %}
      <div class="relative flex justify-center flex-1 row-start-2 gap-3 max-w-[100vw] overflow-hidden page-container">
        <div class="relative sm:grid w-full grid-absolute max-w-[1640px] p-2">
            {{designApplet.applet(title='design', maxWidth='w-[780px]', height='sm:h-[350px]', data=collections.designs, posX='left-0 lg:pl-[4.4vw]', posY='top-0 lg:pt-[3vh]')}}
            {{postsApplet.applet(title='posts', maxWidth='w-[740px]', height='sm:h-[460px]', data=collections.posts, posX='left-1/2 sm:-translate-x-1/2', posY='top-1/2 sm:-translate-y-1/2')}}
            {{photosApplet.applet(title='photos', maxWidth='w-[335px]', height='sm:h-[495px]', data=photos, posX='right-0 lg:pr-[3.3vw]', posY='bottom-0 lg:pb-[2vh]')}}
        </div>
      </div>
{% endblock %}
